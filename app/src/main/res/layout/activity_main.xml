<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.tay.myapplication.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Accelerometer X value:"
        android:id="@+id/accelerometerX" />

    <TextView
        android:text="Accelerometer Y value:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/accelerometerX"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp"
        android:id="@+id/accelerometerY" />

    <TextView
        android:text="Accelerometer Z value:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:id="@+id/accelerometerZ"
        android:layout_below="@+id/accelerometerY"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/accelerometerX"
        android:layout_toEndOf="@+id/accelerometerX"
        android:layout_marginLeft="41dp"
        android:layout_marginStart="41dp"
        android:id="@+id/accelerometerValueX"
        android:text="X value" />

    <TextView
        android:text="Y value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/accelerometerZ"
        android:layout_alignLeft="@+id/accelerometerValueX"
        android:layout_alignStart="@+id/accelerometerValueX"
        android:id="@+id/accelerometerValueY" />

    <TextView
        android:text="Z value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/accelerometerValueZ"
        android:layout_alignBaseline="@+id/accelerometerZ"
        android:layout_alignBottom="@+id/accelerometerZ"
        android:layout_alignLeft="@+id/accelerometerValueY"
        android:layout_alignStart="@+id/accelerometerValueY" />

    <TextView
        android:text="Rotation X value:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/accelerometerZ"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp"
        android:id="@+id/rotationX" />

    <TextView
        android:text="Rotation Y value:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rotationX"
        android:layout_alignParentStart="true"
        android:layout_marginTop="19dp"
        android:id="@+id/rotationY" />

    <TextView
        android:text="Rotation Z value:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:id="@+id/rotationZ"
        android:layout_below="@+id/rotationY"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="X value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/rotationX"
        android:layout_alignEnd="@+id/accelerometerValueZ"
        android:id="@+id/rotationValueX" />

    <TextView
        android:text="Y value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/rotationZ"
        android:layout_alignStart="@+id/rotationValueX"
        android:id="@+id/rotationValueY" />

    <TextView
        android:text="Z value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/rotationZ"
        android:layout_alignStart="@+id/rotationValueY"
        android:id="@+id/rotationValueZ" />
</RelativeLayout>
